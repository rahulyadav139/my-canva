{
  "name": "my-canva",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:client": "turbo run build --filter=client",
    "build:api": "turbo run build --filter=api",
    "dev": "turbo run dev --parallel --filter=./apps/*",
    "dev:client": "turbo run dev --filter=client",
    "dev:api": "turbo run dev --filter=api",
    "start:api": "cd apps/api && turbo run start",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules",
    "ui:add": "turbo run bunx --filter=@repo/ui -- shadcn@latest add --"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "typescript": "catalog:",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
