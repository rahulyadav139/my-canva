{
  "name": "my-canva",
  "private": true,
  "scripts": {
    "build": "bun --filter '*' build",
    "build:client": "bun --filter client build",
    "build:api": "bun --filter api build",
    "dev": "bun --filter './apps/*' dev",
    "dev:client": "bun --filter client dev",
    "dev:api": "bun --filter api dev",
    "start:api": "cd apps/api && bun run start",
    "lint": "bun --filter '*' lint",
    "format": "bun --filter '*' format",
    "format:check": "bun --filter '*' format:check",
    "type-check": "bun --filter '*' type-check",
    "clean": "bun --filter '*' clean && rimraf node_modules",
    "ui:add": "bun --filter @repo/ui bunx shadcn@latest add --"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "typescript": "catalog:"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "zod": "4.1.5",
      "react": "19.1.1",
      "react-dom": "19.1.1",
      "prettier": "3.6.2",
      "eslint": "9.0.0",
      "typescript": "5.9.2"
    }
  }
}
