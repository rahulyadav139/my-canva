{
  "extends": "@repo/typescript-config/next",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./.next/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["./*"],
      "@repo/ui/components/*": ["../../packages/ui/src/components/*"],
      "@repo/ui/base/*": ["../../packages/ui/src/components/base/*"],
      "@repo/ui/hooks/*": ["../../packages/ui/src/hooks/*"],
      "@repo/ui/lib/*": ["../../packages/ui/src/lib/*"],
      "@repo/ui/styles.css": ["../../packages/ui/src/styles/globals.css"],
      "@repo/ui/utils": ["../../packages/ui/src/lib/utils"],
      "@repo/ui/postcss.config": ["../../packages/ui/postcss.config.mjs"],
      "@repo/shared/*": ["../../packages/shared/*/index"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
