{
  "extends": "@repo/typescript-config/base",
  "compilerOptions": {
    "incremental": true,
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/shared": ["../../packages/shared/dist/index"],
      "@repo/shared/*": ["../../packages/shared/dist/*"],
      "@repo/database": ["../../packages/database/dist/index"],
      "@repo/database/*": ["../../packages/database/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
