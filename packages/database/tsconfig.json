{
  "extends": "@repo/typescript-config/node",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "baseUrl": ".",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "composite": false,
    "paths": {
      "@/*": ["./src/*"],
      "@repo/shared": ["../shared/dist/index"],
      "@repo/shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
}
